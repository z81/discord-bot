{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": false,
        "experimentalDecorators": true,
        "noImplicitUseStrict": true,
        "removeComments": true,
        "moduleResolution": "node",
        "lib": [
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "showCoverageOnLoad": true
}